{
  "ci": {
    "collect": {
      "numberOfRuns": 3,
      "settings": {
        "configPath": "./lighthouse-config.js"
      }
    },
    "assert": {
      "preset": "lighthouse:no-pwa",
      "assertions": {
        "font-display": "off",
        "is-crawlable": "off",
        "csp-xss": "off",
        "total-byte-weight": "off",
        "offscreen-images": [
          "warn",
          { "maxLength": 0 },
          "error",
          { "maxLength": 5 }
        ],
        "unsized-images": "off",
        "uses-rel-preconnect": ["warn"],
        "uses-responsive-images": [
          "warn",
          { "maxLength": 0 },
          "error",
          { "maxLength": 5 }
        ],
        "unused-javascript": [
          "warn",
          { "maxLength": 0 },
          "error",
          { "maxLength": 5 }
        ],
        "unused-css-rules": [
          "warn",
          { "maxLength": 0 },
          "error",
          { "maxLength": 1 }
        ]
      }
    }
  }
}
