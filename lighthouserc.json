{
  "ci": {
    "collect": {
      "numberOfRuns": 3,
      "settings": {
        "configPath": "./lighthouse-config.js"
      }
    },
    "assert": {
      "preset": "lighthouse:no-pwa",
      "assertions": {
        "font-display": "off",
        "uses-rel-preconnect": ["warn"],
        "tap-targets": [
          "warn",
          { "minScore": "0.9" },
          "error",
          { "minScore": "0.5" }
        ],
        "uses-responsive-images": [
          "warn",
          { "maxLength": 0 },
          "error",
          { "maxLength": 5 }
        ]
      }
    }
  }
}
