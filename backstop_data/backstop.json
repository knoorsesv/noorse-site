{
  "id": "backstop_noorse",
  "viewports": [
    {
      "label": "phone",
      "width": 320,
      "height": 640
    },
    {
      "label": "sm",
      "width": 480,
      "height": 906
    },
    {
      "label": "md",
      "width": 768,
      "height": 1152
    },
    {
      "label": "lg",
      "width": 1024,
      "height": 768
    },
    {
      "label": "xl",
      "width": 1400,
      "height": 960
    }
  ],
  "onBeforeScript": "puppet/onBefore.js",
  "onReadyScript": "puppet/onReady.js",
  "scenarios": [
    {
      "label": "Homepage viewport",
      "url": "http://localhost:8000",
      "delay": 1000,
      "readyEvent": "backstopjs_ready",
      "misMatchThreshold": "1",
      "selectors": ["viewport"]
    },
    {
      "label": "Homepage full Content without nav",
      "url": "http://localhost:8000",
      "delay": 1000,
      "readyEvent": "backstopjs_ready",
      "removeSelectors": ["section#nav-container"],
      "misMatchThreshold": "1",
      "selectors": ["#___gatsby"]
    },
    {
      "label": "Homepage viewport after scroll",
      "url": "http://localhost:8000",
      "delay": 1000,
      "scrollToSelector": "#homepage-content",
      "readyEvent": "backstopjs_ready",
      "postInteractionWait": "500ms",
      "misMatchThreshold": "1",
      "selectors": ["viewport"]
    },
    {
      "label": "Homepage nav sidebar open",
      "url": "http://localhost:8000",
      "delay": 1000,
      "viewports": [
        {
          "label": "phone",
          "width": 320,
          "height": 640
        },
        {
          "label": "sm",
          "width": 480,
          "height": 906
        },
        {
          "label": "md",
          "width": 768,
          "height": 1152
        }
      ],
      "postInteractionWait": "500ms",
      "clickSelector": "#menu-hamburger",
      "misMatchThreshold": "1",
      "selectors": ["viewport"]
    },
    {
      "label": "News Page",
      "delay": 500,
      "readyEvent": "backstopjs_ready",
      "url": "http://localhost:8000/nieuws/Nieuwe%20spelers%202020-2021/",
      "selectors": ["document"]
    },
    {
      "label": "Ploeg Page",
      "delay": 500,
      "url": "http://localhost:8000/team/noorse%201",
      "selectors": ["document"]
    },
    {
      "label": "Category Page",
      "delay": 500,
      "url": "http://localhost:8000/senioren",
      "selectors": ["document"]
    },
    {
      "label": "Contact Page",
      "delay": 500,
      "url": "http://localhost:8000/contact",
      "selectors": ["document"]
    },
    {
      "label": "Bestuur Page",
      "delay": 500,
      "url": "http://localhost:8000/bestuur",
      "selectors": ["document"]
    },
    {
      "label": "Lidmaatschap Page",
      "delay": 500,
      "url": "http://localhost:8000/lidmaatschap",
      "selectors": ["document"]
    }
  ],
  "paths": {
    "bitmaps_reference": "bitmaps_reference",
    "bitmaps_test": "bitmaps_test",
    "engine_scripts": "engine_scripts",
    "html_report": "html_report",
    "ci_report": "ci_report"
  },
  "report": ["browser"],
  "engine": "puppeteer",
  "engineOptions": {
    "args": ["--no-sandbox"]
  },
  "asyncCaptureLimit": 5,
  "asyncCompareLimit": 50,
  "debug": false,
  "debugWindow": false
}
