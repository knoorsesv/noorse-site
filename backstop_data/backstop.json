{
  "id": "backstop_default",
  "viewports": [
    {
      "label": "desktop",
      "width": 1920,
      "height": 1080
    },
    {
      "label": "tablet",
      "width": 640,
      "height": 860
    },
    {
      "label": "tablet-landscape",
      "width": 1024,
      "height": 768
    },
    {
      "label": "smartphone",
      "width": 360,
      "height": 640
    }
  ],
  "onBeforeScript": "puppet/onBefore.js",
  "onReadyScript": "puppet/onReady.js",
  "scenarios": [
    {
      "label": "Homepage",
      "url": "http://host.docker.internal:8000/",
      "delay": 1000,
      "selectors": ["viewport"],
      "misMatchThreshold": 1
    },
    {
      "label": "Content without nav",
      "url": "http://host.docker.internal:8000/",
      "delay": 1000,
      "selectors": ["#homepage-content"],
      "removeSelectors": ["#header"],
      "misMatchThreshold": 1
    },
    {
      "label": "Open Dropdown Menu On Hover",
      "url": "http://host.docker.internal:8000/",
      "delay": 500,
      "selectors": ["viewport"],
      "hoverSelector": ".group",
      "viewports": [
        {
          "label": "desktop",
          "width": 1920,
          "height": 1080
        }
      ]
    },
    {
      "label": "Open Dropdown Menu On Click",
      "url": "http://host.docker.internal:8000/",
      "delay": 500,
      "clickSelector": ".group",
      "selectors": ["viewport"],
      "viewports": [
        {
          "label": "tablet-landscape",
          "width": 1024,
          "height": 768
        }
      ]
    },
    {
      "label": "Open Menu on hamburger click",
      "url": "http://host.docker.internal:8000/",
      "delay": 500,
      "clickSelector": "#menu-hamburger",
      "selectors": ["viewport"],
      "viewports": [
        {
          "label": "tablet",
          "width": 640,
          "height": 800
        },
        {
          "label": "smartphone",
          "width": 360,
          "height": 640
        }
      ]
    },
    {
      "label": "Change header on scroll",
      "url": "http://host.docker.internal:8000/",
      "selectors": ["viewport"],
      "onReadyScript": "puppet/scrollDown.js"
    },
    {
      "label": "News Page",
      "url": "http://host.docker.internal:8000/nieuws/Nieuwe%20spelers%202020-2021",
      "delay": 500,
      "selectors": ["viewport", "document"]
    }
  ],
  "paths": {
    "bitmaps_reference": "backstop_data/bitmaps_reference",
    "bitmaps_test": "backstop_data/bitmaps_test",
    "engine_scripts": "backstop_data/engine_scripts",
    "html_report": "backstop_data/html_report",
    "ci_report": "backstop_data/ci_report"
  },
  "report": [],
  "engine": "puppeteer",
  "engineOptions": {
    "args": ["--no-sandbox"]
  },
  "asyncCaptureLimit": 5,
  "asyncCompareLimit": 50,
  "debug": false,
  "debugWindow": false
}
