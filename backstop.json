{
  "id": "backstop_noorse",
  "viewports": [
    {
      "label": "small",
      "width": 320,
      "height": 640
    },
    {
      "label": "medium",
      "width": 640,
      "height": 800
    },
    {
      "label": "large",
      "width": 1024,
      "height": 768
    }
  ],
  "onBeforeScript": "puppet/onBefore.js",
  "onReadyScript": "puppet/onReady.js",
  "scenarios": [
    {
      "label": "Homepage viewport",
      "url": "http://localhost:8000",
      "delay": 2500,
      "readyEvent": "backstopjs_ready",
      "misMatchThreshold": "3",
      "selectors": ["viewport"]
    },
    {
      "label": "Homepage full Content without nav",
      "url": "http://localhost:8000",
      "delay": 2500,
      "readyEvent": "backstopjs_ready",
      "removeSelectors": ["header#nav-container"],
      "misMatchThreshold": "3",
      "selectors": ["#___gatsby"]
    },
    {
      "label": "Homepage viewport after scroll",
      "url": "http://localhost:8000",
      "delay": 2500,
      "scrollToSelector": "#homepage-content",
      "readyEvent": "backstopjs_ready",
      "postInteractionWait": "500ms",
      "removeSelectors": ["[title=trooper-video]"],
      "misMatchThreshold": "3",
      "selectors": ["viewport"]
    },
    {
      "label": "Homepage nav sidebar open",
      "url": "http://localhost:8000",
      "delay": 2500,
      "viewports": [
        {
          "label": "small",
          "width": 320,
          "height": 640
        },
        {
          "label": "medium",
          "width": 640,
          "height": 800
        }
      ],
      "postInteractionWait": "500ms",
      "misMatchThreshold": "3",
      "clickSelector": "#menu-hamburger",
      "selectors": ["viewport"]
    },
    {
      "label": "News Page",
      "delay": 2500,
      "misMatchThreshold": "3",
      "url": "http://localhost:8000/nieuws/Nieuwe%20spelers%202020-2021/",
      "selectors": ["document"]
    },
    {
      "label": "All News Overview Page",
      "delay": 2500,
      "misMatchThreshold": "3",
      "url": "http://localhost:8000/info/nieuws/",
      "selectors": ["document"]
    },
    {
      "label": "Ploeg Page",
      "delay": 2500,
      "misMatchThreshold": "3",
      "url": "http://localhost:8000/team/noorse%201",
      "selectors": ["document"]
    },
    {
      "label": "Kalender Page",
      "misMatchThreshold": "3",
      "delay": 2500,
      "url": "http://localhost:8000/info/kalender",
      "selectors": ["document"]
    },
    {
      "label": "Category Page",
      "delay": 2500,
      "misMatchThreshold": "3",
      "url": "http://localhost:8000/senioren",
      "selectors": ["document"]
    },
    {
      "label": "Contact Page",
      "delay": 2500,
      "misMatchThreshold": "3",
      "url": "http://localhost:8000/contact",
      "selectors": ["document"]
    },
    {
      "label": "Bestuur Page",
      "delay": 2500,
      "misMatchThreshold": "3",
      "url": "http://localhost:8000/info/bestuur",
      "selectors": ["document"]
    },
    {
      "label": "Lidmaatschap Page",
      "misMatchThreshold": "3",
      "delay": 2500,
      "url": "http://localhost:8000/info/lidmaatschap",
      "selectors": ["document"]
    }
  ],
  "paths": {
    "bitmaps_reference": "backstop_data/bitmaps_reference",
    "bitmaps_test": "backstop_data/bitmaps_test",
    "engine_scripts": "backstop_data/engine_scripts",
    "html_report": "backstop_data/html_report",
    "ci_report": "backstop_data/ci_report"
  },
  "report": ["browser"],
  "engine": "puppeteer",
  "engineOptions": {
    "args": ["--no-sandbox"]
  },
  "asyncCaptureLimit": 3,
  "asyncCompareLimit": 50,
  "debug": false,
  "debugWindow": false
}
