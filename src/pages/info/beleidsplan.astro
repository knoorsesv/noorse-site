---
import type { ContentfulPage } from '../../data/contentful/types'
import Layout from '../../layouts/Layout.astro'
import { contentfulClient } from '../../lib/contentful'
import { MarkDownPage } from '../../react/layout'

const page = (
  await contentfulClient.getEntries<ContentfulPage>({
    'fields.title': 'Beleidsplan',
    content_type: 'page',
  })
).items[0]?.fields
---

<Layout title="Info - Beleidsplan" currentURL={Astro.url}>
  {
    page ? (
      <MarkDownPage
        title={page.title}
        markdownClassNames="collapsible-ul-sections"
        content={page.body}
      />
    ) : (
      <h1>No Beleidsplan</h1>
    )
  }
</Layout>
